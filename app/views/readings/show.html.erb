<!--reading_onlinebody begin-->
<div class="breadcrumb breadcrumb2">当前位置：<a href="/">首页</a> > <span>清单学院课堂</span></div>
<!--reading_onlinebody begin-->
<div class="warpbox">
  <div class="bordertop">
    <div class="title">
      <div class="online_title left"><%= @document.title %></div>
      <div class="readbox_zz left">
        <div class="readbox_zz_left left">
          <div class="readbox_author left">作者：<span style="color:#0095ba;"><%= @document.author %></span></div>
          <div class="readbox_read left">阅读人数：
          		<span style="color:#2f93c6;"><%= @document.view_count %></span>
          	</div>
        </div>
        <div class="readbox_zz_right right">
          <div class="readbox_read right">下载次数：
          	<span style="color:#e13a00;"><%= @document.download_count %></span>
          </div>
        </div>
      </div>
      <div class="download_button left">
      	<%= link_to_if(@document.can_download?, "下载" , download_reading_path(@document) ){
              link_to "下载","javascript:alert('当前资料不允许下载,请下载其他本站资料!')"
          } %>
      </div>
    </div>
    <div class="reading_online_zz">
    		<%=raw @document.body.truncate(300) %>
    </div>
    <div class="reading_online_video">
      <div class="reading_online_video_title">
	      <!-- <div class="reading_online_download right">下载</div> -->
	    </div>
	    <div class="reading_online_video_video">
	      <!-- <img src="/assets/images/reading_online/video_big.jpg" width="714" height="535" /> -->
        <object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000"  width="714px" height="535px" codebase="http://active.macromedia.com/flash5/cabs/swflash.cab#version=8,0,0,0">
          <param name="MOVIE" value="<%= @document.swf_link %>">
          <param name="PLAY" value="true">
          <param name="LOOP" value="true">
          <param name="QUALITY" value="high">
          <param name="FLASHVARS" value="zoomtype=1">
          <embed src="<%= @document.swf_link %>" width="714px" height="535px" play="true" align="" loop="true" quality="high" type="application/x-shockwave-flash" flashvars="zoomtype=1" pluginspage="http://www.macromedia.com/go/getflashplayer">
            
        </object>
	    </div>
	    <!-- <div class="reading_online_video_down">
	      <img src="/assets/images/reading_online/flash.jpg" width="730" height="30" />
	    </div> -->
	  </div>
	  <br />
	</div>
</div>
<div class="footbox_border"></div>

<div class="warpbox">
  <div class="bordertop">
    <div class="say"></div>
    <div class="weibo">
    		<!-- <img src="/assets/images/reading_online/weibo.jpg" width="921" height="527" /> -->
    		<iframe id="weiboiframe" width="921" scrolling="auto" height="600" frameborder="0" src="http://wall.v.t.qq.com/index.php?c=wall&a=index&ak=801175828&w=0&h=600&o=7&s=0&t=<%= CGI.escape(@document.topic.strip) %>" name="weiboiframe"></iframe>
    	</div>
    <div class="clear"></div>
  </div>
</div>
<div class="footbox_border"></div>
