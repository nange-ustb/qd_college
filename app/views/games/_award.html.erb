<div class="hjmd_1_middle_content_list1">
  <table width="250" border="0">
    <tr>
      <td width="66">
        <% user_header = award.try(:user).try(:user_header) %>
        <% if user_header and user_header.try(:link).present? %>
        	<%= image_tag user_header.link_url(:mini),:size=>"50x50", :width => 50, :height => 50 %>
     	<% else %>
     		<%= image_tag asset_path("images/user/sculpture.jpg",:size=>"50x50"), :width => 50, :height => 50 %>
        <% end %> 
      </td>
      <td width="103" title="<%= award.username %>"><%= award.username.truncate(10, :omission => '') %></td>
      <td width="67"><%= award.try(:user).try(:zone_full_name) %></td>
    </tr>
  </table>
</div>