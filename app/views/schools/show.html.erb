<div class="breadcrumb breadcrumb2">
	当前位置：<a href="#">首页</a> > <span>清单学院<%= @exam.level_text %>在线测评</span>
</div>
<div class="warpbox">
  <div class="bordertop">
    <div class="testbody">
      <div class="title">
        <div class="title_left left"><%= @exam.level_text %>专业测试<span class="title-text">（本测试共有<span style="color:#F00; font-weight:bold;"><%= @exam.questions.size %></span>道题，选择您认为正确的答案）</span></div>
      </div>
    <% @exam.questions.each_with_index do |q,index|%>
      <div class="control-group">
        <label class="control-label"><%= index + 1 %>.<%= q.title %></label>
        <div class="controls">
          <% attrs = %w(a b c d e f);attrs_tmp = [] %>
          <% attrs.each do |attr| %>
            <% if (value = q.send(attr.to_sym)).present? %>
              <%= attr.upcase %>、<%= value %><br>
            <% end %>
          <% end %>
        </div>
        <div class="controls">
           <span style= 'color:red'>正确答案:<%= q.answer.upcase %></span>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
<div class="footbox_border"></div>



